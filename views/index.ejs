</head>
<body>
  <!-- input box and settings -->
  <nav>
    <div>
      <p>todo-list</p>
      <button>/login</button>
    </div>
  </nav>
  <!-- login/register form-->
  <% if (!user_id) {%>
    <header class="user-input">
      <form method="post" action="/api/users/login">
        <div>
          <label>/email_address$</label>
          <input type="email" name="email" autocomplete="off">
        </div>
        <div>
          <label>/password$</label>
          <input type="password" name="password" autocomplete="off">
        </div>
        <button type="submit">Login</button>
      </form>
    </header>
  <% } %>
  <!-- main content here -->
  <main>
    <header class="task-input">
      <form method="post" action="/api/tasks/new">
        <p>/add$</p>
        <input name="text" id="user-input" autocomplete="off"></input>
      </form>
    </header>
    <section class="list" id="todo-list"></section>
  </main>
</body>
</html>







