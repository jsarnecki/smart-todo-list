<!DOCTYPE html>
<html lang="en">

<head>

<!-- Google Fonts & Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bungee&family=Hubballi&family=Roboto+Mono:wght@200&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">

<!-- App CSS  -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <link rel="stylesheet" href="../styles/layout.scss" type="text/scss" />
  <link rel="stylesheet" href="../styles/main.scss" type="text/scss" />

     <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js%22%3E"></script>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <!-- <script type="text/javascript" src="/routes/tasks.js"></script> -->

</head>
<body>
  <nav class="offset"></nav>
  <!-- input box and settings -->
  <nav>
    <div>
      <% if (username) { %>
        <p><%= username %>/todo_list</p>
        <form method="post" action="/api/users/logout">
          <button>/logout</button>
        </form>
      <% } else { %>
        <p>todo_list</p>
        <button id="swap-button">/login</button>
      <% } %>
    </div>
  </nav>
  <!-- login/register form-->
  <% if (!user_id) {%>
    <header class="user-input">
      <form method="post" action="/api/users/login">
        <div id="username-input">
          <label>/username$</label>
          <input type="text" name="username" autocomplete="off">
        </div>
        <div>
          <label>/email_address$</label>
          <input type="email" name="email" autocomplete="off">
        </div>
        <div>
          <label>/password$</label>
          <input type="password" name="password" autocomplete="off">
        </div>
        <button id="login-register" type="submit">Login</button>
      </form>
    </header>
  <% } else { %>
  <!-- main content here -->
    <main>
      <header class="task-input">
        <form method="post" action="/api/tasks/new">
          <p>/add$</p>
          <input name="text" id="user-input" autocomplete="off"></input>
        </form>
      </header>
      <section class="list" id="todo-list"></section>
    </main>
  <% } %>
</body>
</html>







